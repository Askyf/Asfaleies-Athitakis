        // Î¦ÏŒÏÏ„Ï‰ÏƒÎ· ÎµÎ½Î·Î¼ÎµÏÏÏƒÎµÏ‰Î½
        function loadUpdates() {
            Object.keys(updatesData).forEach(category => {
                const section = document.getElementById(category);
                if (!section) return;
                
                const updatesContainer = section.querySelector('.updates');
                
                if (updatesData[category].length === 0) {
                    updatesContainer.innerHTML = '<div class="no-updates">Î”ÎµÎ½ Ï…Ï€Î¬ÏÏ‡Î¿Ï…Î½ Î´Î¹Î±Î¸Î­ÏƒÎ¹Î¼ÎµÏ‚ ÎµÎ½Î·Î¼ÎµÏÏÏƒÎµÎ¹Ï‚ Î±Ï…Ï„Î®Î½ Ï„Î· ÏƒÏ„Î¹Î³Î¼Î®.</div>';
                    return;
                }
                
                updatesData[category].forEach(update => {
                    const updateElement = document.createElement('div');
                    updateElement.className = 'update-item';
                    updateElement.innerHTML = `
                        <div class="update-date">${formatDate(update.date)}</div>
                        <div class="update-title">${update.title}</div>
                        <div class="update-content">${update.content}</div>
                    `;
                    updatesContainer.appendChild(updateElement);
                });
            });
        }

        // ÎœÎ¿ÏÏ†Î¿Ï€Î¿Î¯Î·ÏƒÎ· Î·Î¼ÎµÏÎ¿Î¼Î·Î½Î¯Î±Ï‚
        function formatDate(dateString) {
            const options = { year: 'numeric', month: 'long', day: 'numeric' };
            return new Date(dateString).toLocaleDateString('el-GR', options);
        }

        // ÎŸÎ¼Î±Î»Î® ÎºÏÎ»Î¹ÏƒÎ· Î³Î¹Î± navigation links
        document.querySelectorAll('nav a').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                const targetId = this.getAttribute('href');
                const targetElement = document.querySelector(targetId);
                
                if (targetElement) {
                    window.scrollTo({
                        top: targetElement.offsetTop - 80,
                        behavior: 'smooth'
                    });
                }
            });
        });

        // Î‘ÏÏ‡Î¹ÎºÎ¿Ï€Î¿Î¯Î·ÏƒÎ·
        document.addEventListener('DOMContentLoaded', loadUpdates);
    </script>
